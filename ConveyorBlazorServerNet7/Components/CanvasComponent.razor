@using Blazor.Extensions;
@inherits BECanvasComponent

<canvas id="@Id" width="@Width" height="@Height" @ref="_canvasRef" style=@Style @onmousedown=@CanvasClick @onmousemove=@CanvasMouseMove oncontextmenu="return false;"></canvas>
@code
{
    [Parameter]
    public string? Style{ get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> CanvasClick{ get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> CanvasMouseMove { get; set; }
}